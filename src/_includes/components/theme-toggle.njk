<button
  x-data="themeToggle()"
  @click="toggle()"
  class="p-2 rounded-lg text-content-subtle hover:text-content-default hover:bg-surface-subtle transition-colors"
  :aria-label="dark ? 'Passer en mode jour' : 'Passer en mode nuit'"
>
  <span x-show="!dark" aria-hidden="true">🌙</span>
  <span x-show="dark" x-cloak aria-hidden="true">☀️</span>
</button>
