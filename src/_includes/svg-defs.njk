<svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
  <!-- Cube Unit -->
  <symbol id="block-unit" viewBox="0 0 20 20">
    <rect x="2" y="5" width="10" height="10" rx="0.5" fill="#fb923c" stroke="#9a3412" stroke-width="0.5" />
    <path d="M2 5 L5 2 L15 2 L12 5 Z" fill="#fdba74" stroke="#9a3412" stroke-width="0.5" stroke-linejoin="round" />
    <path d="M12 5 L15 2 L15 12 L12 15 Z" fill="#f97316" stroke="#9a3412" stroke-width="0.5" stroke-linejoin="round" />
  </symbol>

  <!-- Bar of Ten -->
  <symbol id="block-ten" viewBox="0 0 20 120">
    <rect x="2" y="5" width="10" height="100" rx="0.5" fill="#fb923c" stroke="#9a3412" stroke-width="0.5" />
    <path d="M2 5 L5 2 L15 2 L12 5 Z" fill="#fdba74" stroke="#9a3412" stroke-width="0.5" stroke-linejoin="round" />
    <path d="M12 5 L15 2 L15 102 L12 105 Z" fill="#f97316" stroke="#9a3412" stroke-width="0.5" stroke-linejoin="round" />
    <g stroke="#9a3412" stroke-width="0.3" opacity="0.3">
      {% for i in range(1, 10) %}
        <line x1="2" y1="{{ 5 + i * 10 }}" x2="12" y2="{{ 5 + i * 10 }}" />
        <line x1="12" y1="{{ 5 + i * 10 }}" x2="15" y2="{{ 2 + i * 10 }}" />
      {% endfor %}
    </g>
  </symbol>

  <!-- Plaque of Hundred -->
  <symbol id="block-hundred" viewBox="0 0 120 120">
    <rect x="2" y="5" width="100" height="100" rx="0.5" fill="#fb923c" stroke="#9a3412" stroke-width="0.5" />
    <path d="M2 5 L5 2 L105 2 L102 5 Z" fill="#fdba74" stroke="#9a3412" stroke-width="0.5" stroke-linejoin="round" />
    <path d="M102 5 L105 2 L105 102 L102 105 Z" fill="#f97316" stroke="#9a3412" stroke-width="0.5" stroke-linejoin="round" />
    <g stroke="#9a3412" stroke-width="0.3" opacity="0.3">
      {% for i in range(1, 10) %}
        <line x1="2" y1="{{ 5 + i * 10 }}" x2="102" y2="{{ 5 + i * 10 }}" />
        <line x1="{{ 2 + i * 10 }}" y1="5" x2="{{ 2 + i * 10 }}" y2="105" />
      {% endfor %}
    </g>
  </symbol>
</svg>
