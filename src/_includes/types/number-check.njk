{# Number-check visual #}
<div x-show="cur.type === 'number-check'" class="bg-surface-subtle rounded-2xl shadow-lg border border-slate-200 dark:border-slate-700 p-8 mb-8">
  {# Standard: operation = ? #}
  <div x-show="cur.operation && !cur.operation.includes('?')" class="text-center mb-6">
    <span class="text-5xl font-extrabold text-content-default tracking-wide" x-text="cur.operation + ' = ?'"></span>
  </div>
  {# Opération à trou: inline blank #}
  <div x-show="cur.operation && cur.operation.includes('?')" class="flex items-center justify-center gap-2 mb-6 flex-wrap">
    <span class="text-4xl sm:text-5xl font-extrabold text-content-default tracking-wide whitespace-nowrap"
          x-text="cur.operation.split('?')[0]"></span>
    <input type="text" inputmode="numeric"
           x-model="userInput" @keydown.enter="check()" :disabled="solved"
           class="w-16 sm:w-20 h-14 sm:h-16 text-center text-3xl sm:text-4xl font-extrabold
             rounded-xl border-2 transition-colors
             focus:outline-none focus:ring-2 focus:ring-primary-500
             bg-white dark:bg-slate-800 text-content-default"
           :class="{
             'border-green-500 bg-green-50 dark:bg-green-900/20': solved,
             'border-red-400 bg-red-50 dark:bg-red-900/20': showError,
             'border-primary-300 dark:border-primary-600': !solved && !showError
           }"
           placeholder="?"
    />
    <span class="text-4xl sm:text-5xl font-extrabold text-content-default tracking-wide whitespace-nowrap"
          x-text="cur.operation.split('?')[1]"></span>
  </div>
  <div class="prose dark:prose-invert text-center text-lg max-w-none" x-html="cur.body"></div>
</div>
{# Opération à trou verify button #}
<div x-show="cur.operation && cur.operation.includes('?')" class="flex items-center gap-3 mb-6">
  <button
    @click="check()"
    :disabled="solved || !userInput.trim()"
    class="w-full px-6 py-3 text-lg font-bold rounded-xl transition-all active:scale-95
      disabled:opacity-40 disabled:cursor-not-allowed"
    :class="solved ? 'bg-green-500 text-white' : 'bg-primary-500 text-white hover:bg-primary-600 shadow-md'"
  >
    <span x-show="!solved">Vérifier</span>
    <span x-show="solved">Bravo !</span>
  </button>
</div>
