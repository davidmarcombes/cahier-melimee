{# Fraction Representation #}
<template x-if="cur.type === 'fraction' && cur.fraction">
  <div class="flex flex-col items-center mb-8">
    <div class="flex flex-wrap justify-center gap-6 mb-4">
      <template x-for="shape in (fractionShapes || [])" :key="shape.idx">
        <div class="relative w-32 h-32 sm:w-40 sm:h-40">
          <svg viewBox="0 0 100 100" class="w-full h-full drop-shadow-sm" x-html="shape.html"></svg>
        </div>
      </template>
    </div>

    {# Instructions from body #}
    <div class="mt-4 prose dark:prose-invert text-center px-4 italic text-slate-500" x-html="cur.body"></div>
  </div>
</template>
