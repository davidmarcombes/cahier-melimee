{# Bounding visual #}
<div x-show="cur.type === 'bounding'" class="bg-surface-subtle rounded-2xl shadow-lg border border-slate-200 dark:border-slate-700 p-6 mb-8">
  <div class="prose dark:prose-invert text-center text-sm max-w-none mb-4 text-content-subtle"
       x-show="cur.body" x-html="cur.body"></div>
  <div class="flex flex-wrap justify-center items-center gap-3">
    <input
      type="text" inputmode="numeric"
      x-model="seqInputs[0]"
      @keydown.enter="check()"
      @input="seqErrors = []"
      :disabled="solved"
      class="w-20 sm:w-24 h-14 sm:h-16 text-center rounded-xl border-2 font-bold text-xl sm:text-2xl transition-colors
        focus:outline-none focus:ring-2 focus:ring-primary-500
        bg-surface-subtle text-content-default"
      :class="{
        'border-green-500 bg-green-50 dark:bg-green-900/20': solved,
        'border-red-400 bg-red-50 dark:bg-red-900/20': seqErrors.includes(0),
        'border-slate-200 dark:border-slate-600': !solved && !seqErrors.includes(0)
      }"
      placeholder="?"
    />
    <span class="text-2xl font-bold text-slate-400">&lt;</span>
    <div class="w-20 sm:w-24 h-14 sm:h-16 flex items-center justify-center rounded-xl bg-primary-50 dark:bg-primary-900/20 border-2 border-primary-200 dark:border-primary-700 font-bold text-xl sm:text-2xl text-primary-700 dark:text-primary-300">
      <span x-text="cur.bounding ? cur.bounding.number : ''"></span>
    </div>
    <span class="text-2xl font-bold text-slate-400">&lt;</span>
    <input
      type="text" inputmode="numeric"
      x-model="seqInputs[1]"
      @keydown.enter="check()"
      @input="seqErrors = []"
      :disabled="solved"
      class="w-20 sm:w-24 h-14 sm:h-16 text-center rounded-xl border-2 font-bold text-xl sm:text-2xl transition-colors
        focus:outline-none focus:ring-2 focus:ring-primary-500
        bg-surface-subtle text-content-default"
      :class="{
        'border-green-500 bg-green-50 dark:bg-green-900/20': solved,
        'border-red-400 bg-red-50 dark:bg-red-900/20': seqErrors.includes(1),
        'border-slate-200 dark:border-slate-600': !solved && !seqErrors.includes(1)
      }"
      placeholder="?"
    />
  </div>
</div>
